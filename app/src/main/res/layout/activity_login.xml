<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.amardeep.groupchat.LoginActivity">

    <include

        android:id="@+id/login_appbar"
        layout="@layout/appbar_layout" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_above="@+id/login_password"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:background="@drawable/input_background"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="15sp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_above="@+id/login_btn"


        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="20dp"


        android:layout_centerVertical="true"
        android:background="@drawable/btn_background"
        android:text="Login"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/login_btn"
        android:layout_below="@+id/login_btn"
        android:layout_marginStart="25dp"
        android:layout_marginTop="51dp"
        android:text="Don't have account ?"
        android:textColor="#f41111" />

    <TextView
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:background="@drawable/btn_background"
        android:padding="2dp"
        android:textColor="#fff"
        android:text="Register" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/reg_btn"
        android:layout_marginTop="26dp"
        android:padding="2dp"
        android:text="@string/forgot_password"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/reset_btn"/>

    <!-- <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="Password"
         android:layout_margin=""
         android:layout_marginTop="25dp"
         android:inputType="textPassword"
         android:id="@+id/reg_password"/>  -->

</RelativeLayout>
